#!/bin/sh
rm -f config.mk
cat >config.mk <<-EOF
	MYPORTS="zlib openssl dbus boost"
	myconfigure() {
		../wvstreams/configure \
			--enable-debug \
			--disable-optimization \
			--with-openssl=../wvports/openssl/build/openssl \
			--with-dbus=../wvports/dbus/build/dbus \
			CPPFLAGS="-I../wvports/boost/build/boost"
	}
EOF
